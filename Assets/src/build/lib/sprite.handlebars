{
  // Default options
  'functions': false,
  'variableNameTransforms': ['dasherize']
}

{{#extend "scss"}}

{{#content "sprites"}}
{{#each retina_groups}}
${{strings.name}}:map-merge((
	low_res:(
		offsetX: {{normal.px.offset_x}}, 
		offsetY: {{normal.px.offset_y}}, 
		width: {{normal.px.width}}, 
		height: {{normal.px.height}}, 
		totalWidth: {{normal.px.total_width}}, 
		totalHeight: {{normal.px.total_height}}, 
		src: '{{{normal.escaped_image}}}'
	),
	hi_res:(
		offsetX: {{retina.px.offset_x}}, 
		offsetY: {{retina.px.offset_y}}, 
		width: {{retina.px.width}}, 
		height: {{retina.px.height}}, 
		totalWidth: {{retina.px.total_width}}, 
		totalHeight: {{retina.px.total_height}}, 
		src: '{{{retina.escaped_image}}}'
	)
),());
{{/each}}


{{/content}}

{{#content "spritesheet"}}{{/content}}

{{/extend}}
